---
const { items } = Astro.props;
---

<ul class="flex flex-col gap-y-2 marker:font-mono marker:font-semibold">
  {
    items.map((item) => (
      <li class="list-decimal list-inside marker:font-mono marker:font-semibold py-4 border-t border-current/30 border-dashed">
        <h4 class="text-lg font-mono font-semibold inline-block pb-2">
          {item.title}
        </h4>
        <p class="leading-snug text-pretty">{item.description}</p>
      </li>
    ))
  }
</ul>
