---
import SocialLink from "@components/UI/SocialLink.astro";

import ContraLogo from "@social-logos/contra_logo.svg";
import UpworkLogo from "@social-logos/upwork_logo.svg";
import LinkedinLogo from "@social-logos/linkedin_logo.svg";
import TgLogo from "@social-logos/tg_logo.svg";
import EmailLogo from "@social-logos/email_logo.svg";
import GitHubLogo from "@social-logos/github_logo.svg";

const { variant } = Astro.props;
const dataUmamiEvent =
  variant === "vertical" ? "header-address-click" : "contacts-address-click";
dataUmamiEvent;
---

<ul
  class={`flex ${
    variant === "vertical"
      ? "flex-col items-center py-2.5"
      : "flex-wrap gap-x-1 translate-x-[calc(clamp(45px,2.5em,78px)/-6)]"
  }`}
>
  <SocialLink
    data-umami-event={dataUmamiEvent}
    href="https://contra.com/ipozdnovskii?referralExperimentNid=SOCIAL_REFERRAL_PROGRAM&referrerUsername=ipozdnovskii"
    ariaLabel="Contra account"
    Icon={ContraLogo}
  />
  <SocialLink
    data-umami-event={dataUmamiEvent}
    href="https://www.upwork.com/freelancers/~014d1e5fca851a8c3a?mp_source=share"
    ariaLabel="Upwork account"
    Icon={UpworkLogo}
  />
  <SocialLink
    data-umami-event={dataUmamiEvent}
    href="https://github.com/Pozdnovskii"
    ariaLabel="GitHub account"
    Icon={GitHubLogo}
  />
  <SocialLink
    data-umami-event={dataUmamiEvent}
    href="https://www.linkedin.com/in/ivan-pozdnovskii/?locale=en_US"
    ariaLabel="Linkedin account"
    Icon={LinkedinLogo}
  />
  <SocialLink
    data-umami-event={dataUmamiEvent}
    href="https://t.me/pozdnovskii"
    ariaLabel="Telegram account"
    Icon={TgLogo}
  />
  <SocialLink
    data-umami-event={dataUmamiEvent}
    href="mailto:ipozdnovskii@icloud.com"
    ariaLabel="Email me"
    Icon={EmailLogo}
    fill="#000"
  />
</ul>
