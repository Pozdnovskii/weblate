---
import { Image } from "astro:assets";
// import { Picture } from "astro:assets";

import Layout from "../layouts/Layout.astro";

import SocialLinksList from "../components/SocilaLinksList.astro";
import ServicesSection from "../components/ServicesSection.astro";
import HowToSection from "../components/HowToSection.astro";
import ToolsSection from "../components/ToolsSection.astro";

// import BG from "../assets/images/hero-bg.svg";
import BackgroundDesk from "../assets/images/hero-bg-desk.webp";
// import BackgroundMob from "../assets/images/hero-bg-mob.png";
---

<Layout>
  <dialog
    aria-labelledby="dialog-name"
    id="under-construction"
    class="w-[30rem] max-w-[94%] m-auto text-center bg-white p-0 border-0 rounded-md shadow-xl backdrop:bg-indigo-200/48 backdrop:backdrop-blur-md"
  >
    <div class="p-6">
      <h2 id="dialog-name" class="text-2xl mb-4">
        This site is in development
      </h2>
      <p class="mb-4">
        You can explore the available sections, and for contact use the links to
        my profiles.
      </p>
      <button
        onclick="document.querySelector('dialog').close();"
        id="close-dialog"
        class="mt-4 px-4 py-2 bg-gray-800 text-white rounded cursor-pointer hover:bg-gray-600 transition"
      >
        View current content
      </button>
    </div>
  </dialog>

  <main
    id="main"
    class="relative flex flex-col gap-y-section overflow-hidden pb-section"
  >
    <section
      id="hero"
      class="wrapper min-h-svh pt-27 pb-2 gap-[min(21svw,80px)] justify-between flex flex-col-reverse w-full relative md:pt-5"
    >
      <h1
        class="leading-tight indent-[2ch] font-medium uppercase w-[15em] max-w-full pb-section-sm md:leading-[1.2] md:pb-svw"
      >
        Meticulous Developer For Your Website
      </h1>
      <p
        class="indent-text-indent leading-tight w-96 max-w-full ms-auto md:me-102 md:w-87 md:max-w-[calc(100%-var(--spacing)*99)]"
      >
        I specialize in fast-loading, SEO-friendly, accessible websites — built
        to rank higher and perform better.
      </p>

      <a
        href="#contacts"
        class="absolute self-end heading-mono flex gap-x-8 md:w-xs md:max-w-[calc(100%-var(--spacing-svw)*2)]"
      >
        <span aria-hidden="true" class="hidden md:block md:me-auto">/</span
        ><span>Explore</span><span>↓</span></a
      >
    </section>

    <Image
      src={BackgroundDesk}
      alt=" "
      aria-hidden="true"
      class="object-cover absolute -z-1 h-[110svh]"
      priority
    />

    <section id="contacts" class="wrapper grid-wrapper">
      <p class="mb-7 indent-text-indent">
        I prefer clean code, as it creates the fastest, most SEO-optimized, and
        accessible websites. This brings more traffic, better engagement, and
        future scalability as your business grows.
      </p>

      <div class="flex flex-wrap justify-between items-center gap-x-6">
        <h2 class="heading-mono">Contact Me →</h2>
        <address>
          <SocialLinksList />
        </address>
      </div>
    </section>

    <ServicesSection />

    <ToolsSection />

    <HowToSection />
  </main>
</Layout>
