---
import Layout from "../layouts/Layout.astro";

import SocialLinksList from "../components/SocilaLinksList.astro";
import HowToSection from "../components/HowToSection.astro";
import ToolsSection from "../components/ToolsSection.astro";
---

<Layout>
  <dialog
    aria-labelledby="dialog-name"
    id="under-construction"
    class="w-[30rem] max-w-[94%] m-auto text-center bg-white p-0 border-0 rounded-md shadow-xl backdrop:bg-indigo-200/48 backdrop:backdrop-blur-md"
  >
    <div class="p-6">
      <h2 id="dialog-name" class="text-2xl font-mono mb-4">
        This site is in development
      </h2>
      <p class="mb-4">
        You can explore the available sections, and for contact use the links to
        my profiles.
      </p>
      <button
        onclick="document.querySelector('dialog').close();"
        id="close-dialog"
        class="mt-4 px-4 py-2 bg-gray-800 text-white rounded cursor-pointer hover:bg-gray-600 transition"
      >
        View current content
      </button>
    </div>
  </dialog>

  <header class="absolute py-3">
    <p class="font-mono flex flex-col">
      <span class="tracking-tighter leading-none">Ivan Pozdnovskii</span>
      <span class="text-responsive-sm">Website Developer</span>
    </p>
    <!-- <nav class="hidden">
      <ul class="flex gap-x-4">
        <li><a href="#services">Services</a></li><li>
          <a href="#works">Works</a>
        </li>
        <li><a href="practices">Practices</a></li>
      </ul>
    </nav> -->
  </header>

  <main id="main">
    <section id="hero" class="pb-4 gap-[min(21svw,80px)] justify-end pt-24">
      <div class="relative flex flex-col">
        <h1
          class="leading-[1.15em] text-balance w-[15em] max-w-full mb-[.36em] opacity-80"
        >
          Meticulous Developer For Your Website
        </h1>
        <p
          class="text-[clamp(16px,.3rem+3.6svw,1.75rem)] leading-relaxed md:leading-tight w-[24em] max-w-full"
        >
          I specialize in fast-loading, SEO-friendly, accessible websites â€”
          built to <span class="inline-block italic font-serif"
            >rank higher and perform better.</span
          >
        </p>
      </div>
      <div class="">
        <h2 class="mb-0">Write me here:</h2>
        <address>
          <SocialLinksList />
        </address>
      </div>
    </section>

    <HowToSection />

    <ToolsSection />
  </main>
</Layout>
