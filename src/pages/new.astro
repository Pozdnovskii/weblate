---
import Layout from "../layouts/Layout.astro";

import ServicesSection from "../components/ServicesSection.astro";
import HowToSection from "../components/HowToSection.astro";
import ToolsSection from "../components/ToolsSection.astro";
import SocialLinksList from "../components/SocilaLinksList.astro";
---

<Layout>
  <header class="py-3">
    <div class="font-mono leading-4 flex flex-col">
      <span class="font-medium tracking-tighter">Ivan Pozdnovskii</span>
      <span class="text-sm">Website Developer</span>
    </div>

    <nav class="hidden">
      <ul class="flex gap-x-4">
        <li><a href="#services">Services</a></li><li>
          <a href="#works">Works</a>
        </li>
        <li><a href="practices">Practices</a></li>
      </ul>
    </nav>
  </header>

  <main class="flex flex-col gap-y-[66svw] px-[3svw]">
    <section
      id="hero"
      class="min-h-[100dvh] py-4 flex flex-col gap-[min(21svw,6rem)] justify-end pt-24"
    >
      <div class="relative flex flex-col">
        <h1
          class="text-[clamp(30px,1rem+6.3svw,4rem)] tracking-tight font-mono font-extralight leading-[min(1.15em,66px)] text-balance w-[9em] max-w-full mb-[.36em] opacity-80"
        >
          Meticulous Developer For Your Website
        </h1>
        <p
          class="text-[clamp(16px,.3rem+3.6svw,1.75rem)] leading-[1.66em] w-[24em] max-w-full"
        >
          I specialize in fast-loading, SEO-friendly, accessible websites —
          built to <span class="inline-block italic font-serif"
            >rank higher and perform better.</span
          >
        </p>
      </div>

      <!-- <section class="lg:self-end-safe"></section> -->
      <div class="">
        <h2
          class="text-[clamp(18px,.5rem+3.6svw,2rem)] font-mono font-light tracking-tighter mb-0"
        >
          Write me here:
        </h2>
        <address>
          <SocialLinksList />
        </address>
      </div>
    </section>

    <ServicesSection />

    <section id="works">
      <h2>Works</h2>
    </section>

    <ToolsSection />

    <HowToSection />

    <section id="testimonials">
      <h2>Testimonials</h2>
      <ul>
        <li>
          <article>
            <blockquote>
              "Hands down the most reliable and effective contractor I've worked
              with. Hired for a short-term project - but found myself looking
              for new work to hand off to Ivan knowing his skills."
            </blockquote>
            <figure>
              <img src="" alt="" />
              <span></span>
              <span></span>
            </figure>
            <a href="" target="_blank">Visit site →</a>
          </article>
        </li>
      </ul>
    </section>
  </main>
</Layout>
